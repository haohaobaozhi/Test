{{var "styles"
    [
        "/styles/font-awesome.min.css",
        "/scripts/lib/editor/editor.css",
        "/styles/frame.css",
        "/styles/override.css",
        "/styles/mobile.css"
    ]
}}
{{var "scripts"
    [
        "/scripts/lib/jquery-3.2.1.min.js",
        "/scripts/lib/editor/editor.js",
        "/scripts/lib/markdown-it.min.js",
        "/scripts/app/uploader.js",
        "/scripts/app/mount-editor.js",
        "/scripts/app/frame.js",
        "/scripts/app/topic-editor.js"
    ]
}}

{{~> common/header ~}}
{{~> common/nav  ~}}

<div class="block-main">
    <div class="panel">
        <div class="panel-header">
           {{~> common/crumbs ~}}
        </div>
        <div class="panel-content">
            <div class="create-topic">
                <div class="category-line">
                    <label>请选择版块：</label>
                    <select name="category" id="category">
                        <option value="">请选择</option>
                        {{#each categories}}
                            <option value="{{category.id}}" {{#if is_selected}}selected{{/if}}>{{category.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="title-line">
                    <label>标题：</label><div class="input-wrapper"><input type="text" id="title" value="{{topic.title}}" name="title" placeholder="请输入一个简洁、明确的标题"></div>
                </div>
                <div class="editor-wrapper">
                    <div class="editor-wrapper-inner edit-article">
                        <textarea name="content" class="editor">{{topic.content}}</textarea>
                    </div>
                </div>
                <div class="btn-line">
                    <a href="javascript:;" class="btn btn-primary" id="btn-submit">提交</a>
                </div>
                <input type="hidden" name="topic-id" id="topic-id" value="{{topic.id}}">
            </div>
        </div>
    </div>
</div>

{{~> common/aside ~}}
{{~> common/footer ~}}